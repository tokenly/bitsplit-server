#!/bin/sh
./venv/bin/flake8 --exclude venv,old .
rm -rf ./bypass-coverage
./venv/bin/nosetests --with-coverage \
  --cover-erase \
  --cover-html \
  --cover-html-dir=bypass-coverage \
  --cover-inclusive \
  --cover-branches \
  --cover-package=bitsplit,util,settings \
  --cover-min-percentage=90 \
  .
